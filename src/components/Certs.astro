---
type CertificateType = { title: string; url?: string };
const certs: CertificateType[] = [
  {
    title: 'Cisco Certified Operating Systems Basics',
    url: 'https://www.credly.com/badges/0bf56aa6-393b-4a75-bd2e-1a60ac1d0adb'
  },
  {
    title: 'Cisco Certified Network Support and Security',
    url: 'https://www.credly.com/badges/7b7d90bf-3e5b-4aa6-91e6-62c64cf9d48f'
  },
  {
    title: 'AWS Certified 1',
    url: 'https://'
  },
  {
    title: 'AWS Certified 2',
    url: 'https://'
  }
];
---

<section
  id="certifications"
  class="py-16 px-4 border-t border-[#ffffff10] text-[var(--white)] bg-[var(--bg)]"
>
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl sm:text-4xl font-bold text-[var(--sec)] shiny-sec mb-8">
      ðŸŽ“ My Certifications
    </h2>

    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        certs.map((cert) => (
          <li class="bg-[#1e1e1e] p-6 rounded-2xl shadow-lg hover:shadow-[0_0_30px_-5px_var(--sec)] transition-shadow">
            <h4 class="text-xl sm:text-2xl font-semibold mb-2 text-[var(--white)]">{cert.title}</h4>
            {
              cert.url && (
                <a
                  href={cert.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm sm:text-base text-[var(--white-icon)] underline hover:text-[var(--sec)] transition-colors inline-flex items-center gap-2"
                >
                  View Credential
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 7h4a2 2 0 012 2v8a2 2 0 01-2 2h-8a2 2 0 01-2-2v-4m10-10L10 14M7 10h.01" />
                  </svg>
                </a>
              )
            }
          </li>
        ))
      }
    </ul>
  </div>
</section>
